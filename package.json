{
  "name": "nightlight-frontend",
  "author": "nightlight",
  "version": "1.0.0",
  "main": "./src/App.tsx",
  "keywords": [
    "react",
    "expo",
    "typescript",
    "nightlight"
  ],
  "license": "MIT",
  "scripts": {
    "start": "npx expo start --dev-client",
    "android": "npx expo run:android",
    "ios": "npx expo run:ios",
    "eject": "npx expo prebuild",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:e2e-build": "detox build --configuration ios.sim.debug",
    "test:e2e-run": "detox test -c ios.sim.debug"
  },
  "dependencies": {
    "@expo-google-fonts/comfortaa": "^0.2.3",
